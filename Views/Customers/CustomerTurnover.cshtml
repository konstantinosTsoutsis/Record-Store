@model ExamProject.Models.Customer

@{
    ViewBag.Title = "CustomerTurnover";
}
<style>
    body {
        background-color: wheat;
    }
</style>

<h2>Customer Turnover</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CustomerId)

        <div class="form-group">
            <p class="control-label col-md-2 ">  FROM :</p>
            <div class="col-md-10">
                <input type="date" name="date1" id="date1" value="" class="form-control" />

            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2 ">  TO :</p>
            <div class="col-md-10">
                <input type="date" name="date2" id="date2" value="" class="form-control" />
                <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

