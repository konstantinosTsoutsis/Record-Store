@model ExamProject.Models.Customer

@{
    ViewBag.Title = "Customer_Employee";
}

<h2>Customer Employee</h2>

<style>
    body {
        background-color: wheat;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p class="control-label col-md-2 ">  Customer :</p>
            <div class="col-md-10">
                @Html.DropDownList("CustomerID", ViewBag.Customers as SelectList, "Select Customer", new { @class = "form-control" })
                <br />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2 ">  employee  :</p>
            <div class="col-md-10">
                @Html.DropDownList("EmployeeID", ViewBag.Employees as SelectList, "Select Employee", new { @class = "form-control" })
                <br />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2 ">  FROM :</p>
            <div class="col-md-10">
                <input type="date" name="date1" id="date1" value="" />

            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2 ">  TO :</p>
            <div class="col-md-10">
                <input type="date" name="date2" id="date2" value="" />
                <br />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="submit" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
