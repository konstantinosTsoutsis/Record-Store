@model ExamProject.Models.Artist

@{
    ViewBag.Title = "ArtistBestAlbum";
}
<style>
    body {
        background-color: wheat;
    }
</style>
<h2>Find the artists with the best albums</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ArtistId)

        <div class="form-group">
            <p class="control-label col-md-2 ">since :</p>
            <div class="col-md-10">
                <input type="date" name="date1" id="date1" value="" />
                <br />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2 ">till :</p>
            <div class="col-md-10">
                <input type="date" name="date2" id="date2" value="" />
                <br />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2 ">ARTISTS :</p>
            <div class="col-md-10">
                <input type="number" name="numberOfArtists" id="numberOfArtists" value="" />
                <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="submit" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
